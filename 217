package com.company;
import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        int number1;
        int number2;
        int number3;

        System.out.print("Enter first integer: ");
        number1 = input.nextInt();

        System.out.print("Enter second integer: ");
        number2 = input.nextInt();

        System.out.print("Enter second integer: ");
        number3 = input.nextInt();

        System.out.printf("sum is %d%n", (number1 + number2 + number3));

        System.out.printf("average is %d%n",(number1+number2+number3)/3);
        if (number1 > number2 & number1 > number3)
            System.out.printf("%d is greater %n", number1);
        if (number2 > number1 & number2 > number3)
            System.out.printf("%d is greater %n", number2);
        if (number3 > number1 & number3 > number2)
            System.out.printf("%d is greater %n", number3);

        if (number1 < number2 & number1 < number3)
            System.out.printf("%d is less", number1);
        if (number2 < number1 & number2 < number3)
            System.out.printf("%d is less", number2);
        if (number3 < number1 & number3 < number2)
            System.out.printf("%d is less", number3);
    }
}
